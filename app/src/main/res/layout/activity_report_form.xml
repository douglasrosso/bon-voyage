<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/salmon"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MainActivity">

        <!-- Título centralizado e destacado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Relatório de Viagem"
            android:textColor="@color/brown"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Informações da viagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <!-- Nome da Viagem -->
            <TextView
                android:id="@+id/travel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome da Viagem"
                android:textColor="@color/brown"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Descrição da Viagem -->
            <TextView
                android:id="@+id/travel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descrição da Viagem"
                android:textColor="@color/brown"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Informações Detalhadas -->
            <TextView
                android:id="@+id/people_qtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Quantidade de pessoas: XXX"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/departure_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Local de partida: XXX"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/arrival_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Local de chegada: XXX"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/transportation_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Meio de locomoção: XXX"
                android:textColor="@color/brown" />
        </LinearLayout>

        <!-- Gastos com a viagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/total_locomotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastos com Locomoção: R$ XXX"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/total_accommodation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gastos com Hospedagem: R$ XXX"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/total_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gastos com Alimentação: R$ XXX"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/total_entertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gastos com Adicionais: R$ XXX"
                android:textColor="@color/brown" />
        </LinearLayout>

        <!-- Botões de Ações -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:text="Editar"
                android:textSize="12sp"
                android:drawableLeft="@drawable/lapis"
                android:backgroundTint="@color/blue"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:text="Deletar"
                android:textSize="12sp"
                android:drawableLeft="@drawable/lixeira"
                android:backgroundTint="@color/red"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar para tela inicial"
            android:drawableLeft="@drawable/voltar"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
