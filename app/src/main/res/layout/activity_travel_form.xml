<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/salmon"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="FormulÃ¡rio de Viagem"
            android:textColor="@color/brown"
            android:textSize="24sp"
            android:textStyle="bold" />

        <include
            layout="@layout/child_detalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/child_gasolina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/child_aereo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/child_hospedagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/child_refeicoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/child_entretenimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Criar"
            android:drawableLeft="@drawable/criar"
            android:backgroundTint="@color/blue"
            />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar para tela inicial"
            android:drawableLeft="@drawable/voltar"/>

    </LinearLayout>
</ScrollView>
